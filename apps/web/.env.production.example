# Production Environment Variables
# Copy this file to .env.production.local and fill in your values

# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_NAME=Sol-itaire
NEXT_PUBLIC_APP_DESCRIPTION=A Solana-powered card game

# Web3 Configuration
NEXT_PUBLIC_WALLET_AUTO_CONNECT=true
NEXT_PUBLIC_WALLET_TIMEOUT=10000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Production Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=true

# Security
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_TRANSACTION_TIMEOUT=30000

# RPC Configuration (Recommended for production)
# Use a reliable RPC provider like QuickNode, Alchemy, or Helius
NEXT_PUBLIC_SOLANA_RPC_URL=https://your-production-rpc-endpoint.com
NEXT_PUBLIC_SOLANA_WS_RPC_URL=wss://your-production-websocket-endpoint.com

# Analytics (Required for production)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Error Reporting (Required for production)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Social Links
NEXT_PUBLIC_TWITTER_HANDLE=solitaire_game
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/solitaire

# Contract Addresses (Fill these in after deployment)
NEXT_PUBLIC_GAME_PROGRAM_ID=your-game-program-id
NEXT_PUBLIC_TOKEN_MINT=your-token-mint-address

# Custom Domain (Optional)
NEXT_PUBLIC_CUSTOM_DOMAIN=solitaire.game