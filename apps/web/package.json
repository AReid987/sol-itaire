{
  "name": "@sol-itaire/web",
  "version": "0.1.0",
  "description": "Sol-itaire web application",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf .next dist out",
    "clean:full": "rm -rf .next dist out node_modules package-lock.json && npm install",
    "test": "echo \"No tests yet\" && exit 0",
    "test:watch": "echo \"No tests yet\" && exit 0",
    "test:coverage": "echo \"No tests yet\" && exit 0",
    "vercel-build": "next build",
    "vercel-install": "npm ci",
    "deploy:preview": "vercel --preview",
    "deploy:prod": "vercel --prod",
    "build-stats": "npm run build && npx @next/bundle-analyzer",
    "optimize": "npm run build && npm run build:analyze",
    "postbuild": "echo 'Build completed successfully'",
    "prebuild": "echo 'Starting build process...'",
    "check-deps": "npm outdated || true",
    "update-deps": "npm update",
    "security-audit": "npm audit",
    "security-audit:fix": "npm audit fix"
  },
  "dependencies": {
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.8",
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.1",
    "framer-motion": "^10.16.4",
    "@tanstack/react-query": "^4.35.3",
    "axios": "^1.5.0",
    "bs58": "^5.0.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.284.0",
    "pino-pretty": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "eslint-config-next": "14.0.0",
    "postcss": "^8.4.28",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "@next/bundle-analyzer": "^14.0.0",
    "vercel": "^32.0.0",
    "cross-env": "^7.0.3"
  }
}